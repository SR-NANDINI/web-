<script>
const fields=["name","role","email","summary","skills","experience","education"];

fields.forEach(f=>{
    document.getElementById(f).addEventListener("input",update);
});

function update(){
    pname.innerText=name.value||"Your Name";
    prole.innerText=role.value||"Your Role";
    pemail.innerText=email.value;
    psummary.innerText=summary.value;
    pexp.innerText=experience.value;
    pedu.innerText=education.value;

    pskills.innerHTML="";
    skills.value.split(",").filter(s=>s.trim()).forEach(s=>{
        let li=document.createElement("li");
        li.innerText=s.trim();
        pskills.appendChild(li);
    });
}

function updateTheme(){
    resume.className="panel resume "+theme.value;
}

function save(){
    let data={};
    fields.forEach(f=>data[f]=document.getElementById(f).value);
    data.theme=theme.value;
    localStorage.setItem("multiResume",JSON.stringify(data));
    alert("Resume saved âœ”");
}

(function load(){
    let data=JSON.parse(localStorage.getItem("multiResume"));
    if(!data) return;
    fields.forEach(f=>document.getElementById(f).value=data[f]||"");
    theme.value=data.theme||"theme-classic";
    updateTheme();
    update();
})();
</script>

