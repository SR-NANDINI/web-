<h1>ðŸ“„ MultiResume Builder</h1>

<div class="container">

<div class="panel">
    <label>Choose Resume Template</label>
    <select id="theme" onchange="updateTheme()">
        <option value="theme-classic">Classic</option>
        <option value="theme-modern">Modern</option>
        <option value="theme-creative">Creative</option>
    </select>

    <input id="name" placeholder="Full Name">
    <input id="role" placeholder="Role / Title">
    <input id="email" placeholder="Email">
    <textarea id="summary" placeholder="Professional Summary"></textarea>
    <input id="skills" placeholder="Skills (comma separated)">
    <textarea id="experience" placeholder="Experience"></textarea>
    <textarea id="education" placeholder="Education"></textarea>

    <button onclick="save()">Save Resume</button>
</div>

<div class="panel resume theme-classic" id="resume">
    <h2 id="pname">Your Name</h2>
    <div class="role" id="prole">Your Role</div>
    <div id="pemail"></div>

    <div class="section">
        <h3>Summary</h3>
        <p id="psummary"></p>
    </div>

    <div class="section">
        <h3>Skills</h3>
        <ul id="pskills"></ul>
    </div>

    <div class="section">
        <h3>Experience</h3>
