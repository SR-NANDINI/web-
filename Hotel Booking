<body>

<div class="container">
    <h1>üè® Hotel Booking</h1>
    <p>Reserve your stay with comfort</p>

    <form id="bookingForm">

        <label>Full Name</label>
        <input type="text" id="name" required>

        <label>Email</label>
        <input type="email" id="email" required>

        <label>Check-in Date</label>
        <input type="date" id="checkin" required>

        <label>Check-out Date</label>
        <input type="date" id="checkout" required>

        <label>Room Type</label>
        <select id="room">
            <option>Single Room</option>
            <option>Double Room</option>
            <option>Deluxe Room</option>
        </select>

        <label>Guests</label>
        <input type="number" id="guests" min="1" max="5" required>

        <label>Payment Method</label>
        <div class="radio-group">
            <label><input type="radio" name="pay" value="Cash" checked> Cash</label>
            <label><input type="radio" name="pay" value="Card"> Card</label>
            <label><input type="radio" name="pay" value="UPI"> UPI</label>
        </div>

        <div class="actions">
            <button class="book-btn" type="submit">Book Now</button>
            <button class="reset-btn" type="reset">Clear</button>
        </div>
    </form>

    <div class="booking-list" id="bookingList"></div>

    <footer>Bookings are saved automatically ‚úî</footer>
</div>

<script>
let bookings = JSON.parse(localStorage.getItem("hotelBookings")) || [];

const form = document.getElementById("bookingForm");
const bookingList = document.getElementById("bookingList");

form.addEventListener("submit", handleBooking);

function handleBooking(e) {
    e.preventDefault();

    const booking = {
        name: name.value.trim(),
        email: email.value.trim(),
        checkin: checkin.value,
        checkout: checkout.value,
        room: room.value,
        guests: guests.value,
        payment: document.querySelector('input[name="pay"]:checked').value
    };

    bookings.push(booking);
    localStorage.setItem("hotelBookings", JSON.stringify(bookings));

    form.reset();
    renderBookings();
}

function renderBookings() {
    bookingList.innerHTML = "";

    bookings.forEach(b => {
        const div = document.createElement("div");
        div.className = "booking-card";
        div.innerHTML = `
            <strong>${b.name}</strong> (${b.email})<br>
            ${b.room} | Guests: ${b.guests}<br>
            ${b.checkin} ‚Üí ${b.checkout}<br>
            Payment: ${b.payment}
        `;
        bookingList.appendChild(div);
    });
}

renderBookings();
</script>

