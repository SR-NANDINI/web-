<body>

<div class="login-box">
    <div class="logo">☕</div>
    <h2>Coffee Order Login</h2>

    <div id="error" class="error"></div>

    <form id="loginForm">
        <input type="text" id="username" placeholder="Username" required>
        <input type="password" id="password" placeholder="Password" required>

        <button type="submit">Login</button>
    </form>

    <div id="success" class="success"></div>

    <footer>Secure login • Coffee Lovers ☕</footer>
</div>

<script>
/* =========================
   SESSION CHECK
========================= */
if (localStorage.getItem("coffeeUser")) {
    showLoggedInUser();
}

/* =========================
   DOM ELEMENTS
========================= */
const form = document.getElementById("loginForm");
const errorBox = document.getElementById("error");
const successBox = document.getElementById("success");

/* =========================
   EVENTS
========================= */
form.addEventListener("submit", handleLogin);

/* =========================
   FUNCTIONS
========================= */
function handleLogin(e) {
    e.preventDefault();

    const username = document.getElementById("username").value.trim();
    const password = document.getElementById("password").value.trim();

    errorBox.textContent = "";
    successBox.textContent = "";

    if (username.length < 3 || password.length < 4) {
        errorBox.textContent = "Invalid username or password length";
        return;
    }

    // Simulated authentication (backend-ready)
    localStorage.setItem("coffeeUser", username);

    showLoggedInUser();
}

function showLoggedInUser() {
    const user = localStorage.getItem("coffeeUser");

    document.querySelector(".login-box").innerHTML = `
        <div class="logo">☕</div>
        <h2>Welcome, ${user}</h2>
        <p>You are successfully logged in.</p>
        <button onclick="logout()">Logout</button>
        <footer>Session active ✔</footer>
    `;
}

function logout() {
    localStorage.removeItem("coffeeUser");
    location.reload();
}
</script>

</body>
</html>
