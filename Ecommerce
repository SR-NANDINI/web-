<header>
    <h1>ðŸ›’ ShopEase</h1>
    <div class="cart-btn">Cart Items: <span id="count">0</span></div>
</header>

<div class="products" id="products"></div>

<div class="cart">
    <h2>Cart</h2>
    <div id="cartList"></div>
    <div class="total" id="total">Total: â‚¹0</div>
</div>

</div>

<script>
const productData=[
    {name:"Wireless Headphones",price:2999,img:"https://picsum.photos/300/200?1"},
    {name:"Smart Watch",price:4999,img:"https://picsum.photos/300/200?2"},
    {name:"Bluetooth Speaker",price:1999,img:"https://picsum.photos/300/200?3"},
    {name:"Laptop Backpack",price:1499,img:"https://picsum.photos/300/200?4"}
];

let cart = JSON.parse(localStorage.getItem("cart")) || [];

function renderProducts(){
    products.innerHTML="";
    productData.forEach((p,i)=>{
        products.innerHTML+=`
        <div class="product">
            <img src="${p.img}">
            <h3>${p.name}</h3>
            <div class="price">â‚¹${p.price}</div>
            <button onclick="addToCart(${i})">Add to Cart</button>
        </div>`;
    });
}

function addToCart(i){
    cart.push(productData[i]);
    save();
    renderCart();
}

function removeItem(i){
    cart.splice(i,1);
    save();
    renderCart();
}

function renderCart(){
    cartList.innerHTML="";
    let sum=0;
    cart.forEach((c,i)=>{
        sum+=c.price;
        cartList.innerHTML+=`
        <div class="cart-item">
            <span>${c.name}</span>
            <span>â‚¹${c.price} <button onclick="removeItem(${i})">x</button></span>
        </div>`;
    });
    total.innerText="Total: â‚¹"+sum;
    count.innerText=cart.length;
}

function save(){
    localStorage.setItem("cart",JSON.stringify(cart));
}

renderProducts();
renderCart();
</script>

