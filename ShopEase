<body>

<div class="app">

<header>
    <h1>üõçÔ∏è ShopEase Pro</h1>
    <div class="tools">
        <input id="search" placeholder="Search products..." oninput="renderProducts()">
        <select id="filter" onchange="renderProducts()">
            <option value="all">All</option>
            <option value="electronics">Electronics</option>
            <option value="accessories">Accessories</option>
        </select>
        <div class="cart-btn">Cart: <span id="count">0</span></div>
    </div>
</header>

<div class="products" id="products"></div>

<div class="cart">
    <h2>Checkout</h2>
    <div id="cartList"></div>
    <div class="total" id="total">Total: ‚Çπ0</div>

    <div class="checkout">
        <input placeholder="Full Name">
        <input placeholder="Mobile Number">
        <input placeholder="Delivery Address" style="grid-column:span 2">
        <button onclick="placeOrder()">Place Order</button>
    </div>
</div>

</div>

<script>
const productData=[
    {name:"Wireless Headphones",price:2999,cat:"electronics",img:"https://picsum.photos/300/200?1"},
    {name:"Smart Watch",price:4999,cat:"electronics",img:"https://picsum.photos/300/200?2"},
    {name:"Bluetooth Speaker",price:1999,cat:"electronics",img:"https://picsum.photos/300/200?3"},
    {name:"Laptop Backpack",price:1499,cat:"accessories",img:"https://picsum.photos/300/200?4"},
    {name:"USB-C Hub",price:999,cat:"accessories",img:"https://picsum.photos/300/200?5"}
];

let cart = JSON.parse(localStorage.getItem("cartPro")) || [];

function renderProducts(){
    const q = search.value.toLowerCase();
    const f = filter.value;
    products.innerHTML="";

    productData
    .filter(p =>
        (f==="all" || p.cat===f) &&
        p.name.toLowerCase().includes(q)
    )
    .forEach((p,i)=>{
        products.innerHTML+=`
        <div class="product">
            <img src="${p.img}">
            <h3>${p.name}</h3>
            <div class="price">‚Çπ${p.price}</div>
            <button onclick="addToCart(${i})">Add to Cart</button>
        </div>`;
    });
}

function addToCart(i){
    cart.push(productData[i]);
    save();
    renderCart();
}

function removeItem(i){
    cart.splice(i,1);
    save();
    renderCart();
}

function renderCart(){
    cartList.innerHTML="";
    let sum=0;
    cart.forEach((c,i)=>{
        sum+=c.price;
        cartList.innerHTML+=`
        <div class="cart-item">
            <span>${c.name}</span>
            <span>‚Çπ${c.price} <button onclick="removeItem(${i})">x</button></span>
        </div>`;
    });
    total.innerText="Total: ‚Çπ"+sum;
    count.innerText=cart.length;
}

function placeOrder(){
    if(cart.length===0){alert("Cart is empty");return;}
    alert("Order placed successfully üéâ");
    cart=[];
    save();
    renderCart();
}

function save(){
    localStorage.setItem("cartPro",JSON.stringify(cart));
}

renderProducts();
renderCart();
</script>

