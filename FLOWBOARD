<body>

<div class="board">
    <h1>üß© FlowBoard</h1>
    <p class="subtitle">Visual task flow management (Kanban style)</p>

    <div class="add">
        <input id="taskInput" placeholder="Add a new task">
        <button onclick="addTask()">Add</button>
    </div>

    <div class="columns">
        <div class="column todo">
            <h3>To Do</h3>
            <div id="todo"></div>
        </div>

        <div class="column progress">
            <h3>In Progress</h3>
            <div id="progress"></div>
        </div>

        <div class="column done">
            <h3>Completed</h3>
            <div id="done"></div>
        </div>
    </div>

    <footer>Board state saved automatically ‚úî</footer>
</div>

<script>
let tasks = JSON.parse(localStorage.getItem("kanban")) || [];

const todoEl = document.getElementById("todo");
const progressEl = document.getElementById("progress");
const doneEl = document.getElementById("done");

function addTask(){
    const text = taskInput.value.trim();
    if(!text) return;

    tasks.push({text,status:"todo"});
    save();
    taskInput.value="";
    render();
}

function moveTask(i,dir){
    const order = ["todo","progress","done"];
    let idx = order.indexOf(tasks[i].status);
    idx += dir;
    if(idx<0 || idx>=order.length) return;
    tasks[i].status = order[idx];
    save();
    render();
}

function deleteTask(i){
    tasks.splice(i,1);
    save();
    render();
}

function save(){
    localStorage.setItem("kanban",JSON.stringify(tasks));
}

function render(){
    todoEl.innerHTML="";
    progressEl.innerHTML="";
    doneEl.innerHTML="";

    tasks.forEach((t,i)=>{
        const div=document.createElement("div");
        div.className="task";
        div.innerHTML=`
            <span>${t.text}</span>
            <div class="actions">
                ${t.status!=="todo" ? `<button class="prev" onclick="moveTask(${i},-1)">‚Üê</button>` : ""}
                ${t.status!=="done" ? `<button class="next" onclick="moveTask(${i},1)">‚Üí</button>` : ""}
                <button class="delete" onclick="deleteTask(${i})">‚úï</button>
            </div>
        `;
        if(t.status==="todo") todoEl.appendChild(div);
        else if(t.status==="progress") progressEl.appendChild(div);
        else doneEl.appendChild(div);
    });
}

render();
</script>

</body>
