<div class="app">
    <header>
        <h1>ðŸ”— LinkVault</h1>
        <span>Personal Smart Bookmark Manager</span>
    </header>

    <div class="add">
        <input id="title" placeholder="Website name">
        <input id="url" placeholder="https://example.com">
        <button onclick="addLink()">Save</button>
    </div>

    <div class="search">
        <input id="search" placeholder="Search saved links..." oninput="render()">
    </div>

    <div class="links" id="list"></div>

    <footer>Links are saved securely in your browser</footer>
</div>

<script>
let links = JSON.parse(localStorage.getItem("links")) || [];

function addLink(){
    const t = title.value.trim();
    const u = url.value.trim();
    if(!t || !u) return;

    links.push({title:t,url:u});
    localStorage.setItem("links",JSON.stringify(links));
    title.value="";
    url.value="";
    render();
}

function removeLink(i){
    links.splice(i,1);
    localStorage.setItem("links",JSON.stringify(links));
    render();
}

function render(){
    const q = search.value.toLowerCase();
    list.innerHTML="";

    links
    .filter(l => l.title.toLowerCase().includes(q) || l.url.toLowerCase().includes(q))
    .forEach((l,i)=>{
        const div=document.createElement("div");
        div.className="card";
        div.innerHTML=`
            <h3>${l.title}</h3>
            <a href="${l.url}" target="_blank">${l.url}</a>
            <div class="actions">
                <button class="open" onclick="window.open('${l.url}')">Open</button>
                <button class="delete" onclick="removeLink(${i})">Delete</button>
            </div>
        `;
        list.appendChild(div);
    });
}

render();
</script>

