    <div class="card">
        <h1>✨ Welcome ✨</h1>
        <p>Click the magic button to change the background!</p>
        <button onclick="changeColor()">Magic Button</button>
    </div>

    <script>
        function changeColor() {
            const colors = [
                "linear-gradient(120deg, #f6d365, #fda085)",
                "linear-gradient(120deg, #84fab0, #8fd3f4)",
                "linear-gradient(120deg, #fccb90, #d57eeb)",
                "linear-gradient(120deg, #a1c4fd, #c2e9fb)"
            ];
            document.body.style.background =
                colors[Math.floor(Math.random() * colors.length)];
        }
    </script>

