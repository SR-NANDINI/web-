<body>

<div class="app">
    <h1>ðŸŽ“ Attendance Manager</h1>
    <p class="subtitle">Manage student attendance professionally</p>

    <div class="form">
        <input type="text" id="studentName" placeholder="Enter student name">
        <button onclick="addStudent()">Add</button>
    </div>

    <div class="stats">
        <div class="stat">Total: <strong id="total">0</strong></div>
        <div class="stat">Present: <strong id="present">0</strong></div>
        <div class="stat">Absent: <strong id="absent">0</strong></div>
    </div>

    <div class="list" id="list"></div>

    <footer>Attendance saved automatically âœ”</footer>
</div>

<script>
let students = JSON.parse(localStorage.getItem("attendance")) || [];

const list = document.getElementById("list");
const totalEl = document.getElementById("total");
const presentEl = document.getElementById("present");
const absentEl = document.getElementById("absent");

function addStudent(){
    const name = studentName.value.trim();
    if(!name) return;

    students.push({name,status:"present"});
    save();
    studentName.value="";
    render();
}

function markStatus(index,status){
    students[index].status = status;
    save();
    render();
}

function removeStudent(index){
    students.splice(index,1);
    save();
    render();
}

function save(){
    localStorage.setItem("attendance",JSON.stringify(students));
}

function render(){
    list.innerHTML="";
    let present=0, absent=0;

    students.forEach((s,i)=>{
        if(s.status==="present") present++;
        else absent++;

        const div=document.createElement("div");
        div.className="student";
        div.innerHTML=`
            <span>${s.name} (${s.status})</span>
            <div class="actions">
                <button class="present" onclick="markStatus(${i},'present')">Present</button>
                <button class="absent" onclick="markStatus(${i},'absent')">Absent</button>
                <button class="delete" onclick="removeStudent(${i})">Remove</button>
            </div>
        `;
        list.appendChild(div);
    });

    totalEl.textContent = students.length;
    presentEl.textContent = present;
    absentEl.textContent = absent;
}

render();
</script>

