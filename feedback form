<body>

<div class="container">
    <h1>ðŸ’¬ Feedback</h1>
    <p>We value your feedback</p>

    <form id="feedbackForm">

        <label>Name</label>
        <input type="text" id="name" placeholder="Enter your name" required>

        <label>Email</label>
        <input type="email" id="email" placeholder="Enter your email" required>

        <label>Rate Our Service</label>
        <select id="rating">
            <option>Excellent</option>
            <option>Very Good</option>
            <option>Good</option>
            <option>Average</option>
            <option>Poor</option>
        </select>

        <label>Would you recommend us?</label>
        <div class="radio-group">
            <label><input type="radio" name="recommend" value="Yes" checked> Yes</label>
            <label><input type="radio" name="recommend" value="No"> No</label>
        </div>

        <label>Comments</label>
        <textarea id="comments" rows="4" placeholder="Write your feedback..."></textarea>

        <div class="actions">
            <button type="submit" class="submit-btn">Submit</button>
            <button type="reset" class="reset-btn">Clear</button>
        </div>
    </form>

    <div class="feedback-list" id="feedbackList"></div>

    <footer>Feedback is saved securely âœ”</footer>
</div>

<script>
/* =========================
   STATE MANAGEMENT
========================= */
let feedbacks = JSON.parse(localStorage.getItem("feedbacks")) || [];

/* =========================
   DOM ELEMENTS
========================= */
const form = document.getElementById("feedbackForm");
const feedbackList = document.getElementById("feedbackList");

/* =========================
   EVENTS
========================= */
form.addEventListener("submit", handleSubmit);

/* =========================
   FUNCTIONS
========================= */
function handleSubmit(e) {
    e.preventDefault();

    const feedback = {
        name: document.getElementById("name").value.trim(),
        email: document.getElementById("email").value.trim(),
        rating: document.getElementById("rating").value,
        recommend: document.querySelector('input[name="recommend"]:checked').value,
        comments: document.getElementById("comments").value.trim()
    };

    feedbacks.push(feedback);
    localStorage.setItem("feedbacks", JSON.stringify(feedbacks));

    form.reset();
    renderFeedbacks();
}

function renderFeedbacks() {
    feedbackList.innerHTML = "";

    feedbacks.forEach(fb => {
        const div = document.createElement("div");
        div.className = "feedback-item";
        div.innerHTML = `
            <strong>${fb.name}</strong> (${fb.email})<br>
            Rating: ${fb.rating} | Recommend: ${fb.recommend}<br>
            <em>${fb.comments || "No comments"}</em>
        `;
        feedbackList.appendChild(div);
    });
}

/* =========================
   INITIAL LOAD
========================= */
renderFeedbacks();
</script>

