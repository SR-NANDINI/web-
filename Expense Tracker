<div class="app">
    <h1>ðŸ’° Expense Tracker</h1>
    <p class="subtitle">Track income & expenses professionally</p>

    <div class="summary">
        <div class="card">
            <h3>Total Income</h3>
            <strong class="income" id="totalIncome">â‚¹0</strong>
        </div>
        <div class="card">
            <h3>Total Expense</h3>
            <strong class="expense" id="totalExpense">â‚¹0</strong>
        </div>
        <div class="card">
            <h3>Balance</h3>
            <strong id="balance">â‚¹0</strong>
        </div>
    </div>

    <div class="form">
        <input type="text" id="title" placeholder="Description">
        <input type="number" id="amount" placeholder="Amount">
        <select id="type">
            <option value="income">Income</option>
            <option value="expense">Expense</option>
        </select>
        <button onclick="addEntry()">Add</button>
    </div>

    <div class="list" id="list"></div>

    <footer>Data saved automatically âœ”</footer>
</div>

<script>
let records = JSON.parse(localStorage.getItem("expenses")) || [];

const list = document.getElementById("list");
const totalIncome = document.getElementById("totalIncome");
const totalExpense = document.getElementById("totalExpense");
const balance = document.getElementById("balance");

function addEntry(){
    const title = document.getElementById("title").value.trim();
    const amount = +document.getElementById("amount").value;
    const type = document.getElementById("type").value;

    if(!title || !amount) return;

    records.push({title,amount,type});
    save();
    render();
    document.getElementById("title").value="";
    document.getElementById("amount").value="";
}

function deleteEntry(i){
    records.splice(i,1);
    save();
    render();
}

function save(){
    localStorage.setItem("expenses",JSON.stringify(records));
}

function render(){
    list.innerHTML="";
    let income=0, expense=0;

    records.forEach((r,i)=>{
        if(r.type==="income") income+=r.amount;
        else expense+=r.amount;

        const div=document.createElement("div");
        div.className=`item ${r.type}-item`;
        div.innerHTML=`
            <span>${r.title} - â‚¹${r.amount}</span>
            <button onclick="deleteEntry(${i})">X</button>
        `;
        list.appendChild(div);
    });

    totalIncome.textContent="â‚¹"+income;
    totalExpense.textContent="â‚¹"+expense;
    balance.textContent="â‚¹"+(income-expense);
}

render();
</script>

