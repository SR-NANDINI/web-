<body>

<div class="app">
    <h1>ðŸŒ± HabitSync</h1>
    <p class="subtitle">Build habits. Track progress. Stay consistent.</p>

    <div class="add">
        <input id="habitInput" placeholder="Enter a new habit">
        <button onclick="addHabit()">Add</button>
    </div>

    <div class="list" id="habitList"></div>

    <div class="progress" id="progress"></div>

    <footer>Habits saved automatically âœ”</footer>
</div>

<script>
let habits = JSON.parse(localStorage.getItem("habits")) || [];

const habitList = document.getElementById("habitList");
const progressEl = document.getElementById("progress");

function addHabit(){
    const text = habitInput.value.trim();
    if(!text) return;

    habits.push({text,done:false});
    save();
    habitInput.value="";
    render();
}

function toggleHabit(i){
    habits[i].done = !habits[i].done;
    save();
    render();
}

function deleteHabit(i){
    habits.splice(i,1);
    save();
    render();
}

function save(){
    localStorage.setItem("habits",JSON.stringify(habits));
}

function render(){
    habitList.innerHTML="";
    let completed = 0;

    habits.forEach((h,i)=>{
        if(h.done) completed++;

        const div=document.createElement("div");
        div.className="habit"+(h.done?" done":"");
        div.innerHTML=`
            <span>${h.text}</span>
            <div class="actions">
                <button class="check" onclick="toggleHabit(${i})">
                    ${h.done ? "Undo" : "Done"}
                </button>
                <button class="delete" onclick="deleteHabit(${i})">Delete</button>
            </div>
        `;
        habitList.appendChild(div);
    });

    progressEl.textContent = 
        habits.length === 0 
        ? "No habits yet"
        : `Progress: ${completed}/${habits.length} habits completed`;
}

render();
</script>

