<script>
const fields=["name","role","email","phone","summary","skills","experience","education"];

function updatePreview(){
    pname.innerText=name.value||"Your Name";
    prole.innerText=role.value||"Your Role";
    pcontact.innerText=`${email.value||""} ${phone.value?" | "+phone.value:""}`;
    psummary.innerText=summary.value;
    pexp.innerText=experience.value;
    pedu.innerText=education.value;

    pskills.innerHTML="";
    skills.value.split(",").filter(s=>s.trim()).forEach(s=>{
        const li=document.createElement("li");
        li.innerText=s.trim();
        pskills.appendChild(li);
    });
}

fields.forEach(id=>{
    document.getElementById(id).addEventListener("input",updatePreview);
});

function saveResume(){
    const data={};
    fields.forEach(id=>data[id]=document.getElementById(id).value);
    localStorage.setItem("resume",JSON.stringify(data));
    alert("Resume saved successfully âœ”");
}

(function load(){
    const data=JSON.parse(localStorage.getItem("resume"));
    if(!data) return;
    fields.forEach(id=>document.getElementById(id).value=data[id]||"");
    updatePreview();
})();
</script>

